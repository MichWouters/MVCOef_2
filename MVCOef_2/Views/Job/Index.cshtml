@model JobIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Vacatures</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Maak een nieuwe vacature</a>
</p>

@foreach(var vacature in Model.Vacatures)
{
    <div class="card border-danger m-2">
        <div class="card-body bg-primary">
            <h5 class="card-title" style="color: white">@vacature.Omschrijving</h5>
            <p class="card-text">@vacature.Locatie</p>
            <p class="card-text">@vacature.StartDatum</p>
            <p class="card-text">@vacature.EindDatum</p>
        </div>

        <a asp-action="Details" 
            asp-route-id="@vacature.Id"
            class="btn btn-light">Details</a>

        <a asp-action="Delete"
           asp-route-id="@vacature.Id"
           class="btn btn-light">Delete</a>
    </div>
}
